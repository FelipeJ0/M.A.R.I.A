            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/pilarText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pilares"
            app:layout_constraintVertical_bias="0.481" />

        <View
            android:id="@+id/blocPi3"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_radius_view"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/pilarText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.663"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pilares"
            app:layout_constraintVertical_bias="0.481" />

        <View
            android:id="@+id/blocPi2"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:background="@drawable/border_radius_view"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/pilarText"
            app:layout_constraintEnd_toStartOf="@+id/blocPi3"
            app:layout_constraintHorizontal_bias="0.424"
