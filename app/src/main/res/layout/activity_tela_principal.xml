            app:layout_constraintTop_toBottomOf="@+id/pilares"
            app:layout_constraintVertical_bias="0.481" />

        <ImageView
            android:id="@+id/conviver"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/blocPi3"
            app:layout_constraintEnd_toEndOf="@+id/blocPi3"
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintStart_toStartOf="@+id/blocPi3"
            app:layout_constraintTop_toTopOf="@+id/blocPi3"
            app:layout_constraintVertical_bias="0.48"
