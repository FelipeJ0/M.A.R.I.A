            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/ContRecom"
            app:layout_constraintEnd_toEndOf="@+id/ContRecom"
            app:layout_constraintHorizontal_bias="0.303"
            app:layout_constraintStart_toEndOf="@+id/recImage"
            app:layout_constraintTop_toTopOf="@+id/ContRecom"
            app:layout_constraintVertical_bias="0.549" />

        <ImageView
            android:id="@+id/recImage"
            android:layout_width="102dp"
            android:layout_height="125dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/ContRecom"
            app:layout_constraintEnd_toEndOf="@+id/ContRecom"
            app:layout_constraintHorizontal_bias="0.021"
            app:layout_constraintStart_toStartOf="@+id/ContRecom"
            app:layout_constraintTop_toTopOf="@+id/ContRecom"
            app:layout_constraintVertical_bias="0.836"
            app:srcCompat="@drawable/_0287484" />

        <View
