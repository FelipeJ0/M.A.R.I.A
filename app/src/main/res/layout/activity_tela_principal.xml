<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_Principal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/barra_superior"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ff528c"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/barra_inferior"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="576dp"
            android:background="#ff528c"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barra_superior"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/ContRecom"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_radius_view"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/barra_inferior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barra_superior"
            app:layout_constraintVertical_bias="0.761" />

        <TextView
            android:id="@+id/recName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/poppins_light"
            android:text="Esqueceram de mim"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/ContRecom"
            app:layout_constraintEnd_toEndOf="@+id/ContRecom"
            app:layout_constraintHorizontal_bias="0.156"
            app:layout_constraintStart_toEndOf="@+id/playIcon"
            app:layout_constraintTop_toTopOf="@+id/ContRecom"
            app:layout_constraintVertical_bias="0.076" />

        <TextView
            android:id="@+id/disPlat"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:fontFamily="@font/poppins_black"
